<h1>state : <%- state %> <a id="top"></a></h1>
<% if(state == 'view'){%>
<!--  -->
<h4>in home</h4>
<div class="card text-center">
  <div class="card-header">
    <%- data.dateUpload %>
  </div>
  <div class="card-body">
    <img src="" class="rounded float-left" alt="..." />
    <h5 class="card-title">Special title treatment</h5>
    <p class="card-text">
      <%- data.description %>
    </p>
  </div>
</div>
<!--  -->
<div style="margin-top: 50px;">
  <h4>In View</h4>
  <div class="fr-view">
    <%- data.content %>
  </div>
</div>

<%} %>

<!-- edit -->

<% if(state == 'edit || delete'){%>
<form method="POST" action="/admin/post-management/edit/<%- data._id %>">
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">date upload</label>
    <div class="col-sm-10">
      <input
        type="text"
        readonly
        class="form-control-plaintext"
        id="staticEmail"
        value="<%- data.dateUpload %>"
      />
    </div>
  </div>
  <div class="form-group row">
    <label for="" class="col-sm-2 col-form-label">title</label>
    <div class="col-sm-10">
      <input
        name="title"
        type="text"
        class="form-control"
        id=""
        value="<%- data.title %>"
      />
    </div>
  </div>
  <div class="form-group row">
    <label for="" class="col-sm-2 col-form-label">description</label>
    <div class="col-sm-10">
      <input
        type="text"
        class="form-control"
        name="description"
        value="<%- data.description %>"
      />
    </div>
  </div>

  <div class="form-group">
    <textarea name="content" id="text-editor">
        <%- data.content %>

    </textarea>
  </div>

  <button type="submit" class="btn btn-primary mb-2">
    Confirm Update
    <i
      class="fa fa-upload"
      aria-hidden="true"
      style="font-size: 24px; color: black; margin-left: 10px;"
    ></i>
  </button>
</form>

<form action="/admin/post-management/delete/<%- data._id %>" method="post">
  <button
    class="btn btn-danger "
    data-toggle="popover"
    data-content="Delete"
    type="submit"
  >
    Delete this post
    <i
      class="fa fa-trash-o"
      aria-hidden="true"
      style="font-size: 24px; color: black; margin-left: 10px;"
    ></i>
  </button>
</form>

<a class=" back-to-top-btn" href="#top" role="button"
  ><img src="/public/images/back-to-top.png" alt=""
/></a>

<%} %>

<script src="/public/WYSIWYG/froala_editor_3.1.0/js/plugins/image.min.js"></script>
<script src="/public/WYSIWYG/froala_editor_3.1.0/js/plugins/image_manager.min.js"></script>
<script src="/public/WYSIWYG/froala_editor_3.1.0/config.js"></script>

<style>
  .back-to-top-btn {
    position: fixed;
    bottom: 0;
    right: 0;
    opacity: 0.5;
  }

  .back-to-top-btn img {
    width: 130px;
    height: 130px;
  }
</style>
